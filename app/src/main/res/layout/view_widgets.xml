<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="1"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/View"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/view" />

            <ImageView
                android:id="@+id/ViewGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/view_group" />

            <ImageView
                android:id="@+id/ViewAttribute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/view_attributes" />

            <ImageView
                android:id="@+id/TextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/text_view" />
            <TextView
                android:id="@+id/this_is_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is TextView"/>
            <ImageView
                android:id="@+id/EditTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/edit_text_view" />
            <EditText
                android:id="@+id/this_is_edit_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is edit text view"/>

            <ImageView
                android:id="@+id/ButtonEventClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_event_click" />
            <Button
                android:id="@+id/this_is_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is button"/>
            <Button
                android:id="@+id/toast_messages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toast"/>
            <ImageView
                android:id="@+id/ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/image_view"
                />
            <TextView
                android:id="@+id/scroll_view_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here all image/ImageGroup under ScrollView"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>